# Configuración de MongoDB para el proyecto HVFHV

# MongoDB Local
MONGO_URI=mongodb://localhost:27017/

# MongoDB Atlas (Cloud) - Descomentar y ajustar si usas Atlas
# MONGO_URI=mongodb+srv://usuario:password@cluster.mongodb.net/

# Base de datos y colección
DATABASE_NAME=nyc_hvfhv_db
COLLECTION_NAME=trips

# Parámetros de procesamiento
BATCH_SIZE=20000
CHUNK_SIZE=100000

# Logging
LOG_LEVEL=INFO
LOG_FILE=practica_mongodb.log
